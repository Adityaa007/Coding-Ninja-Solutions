void numberCrown(int n) {
    // Write your code here.
    int space=2*(n-1);
   for(int i=0;i<n;i++){
       //number
       for(int j=0;j<=i;j++)
       {
           cout << j+1<<" ";
       }
        //space
        for(int j=0;j<space;j++){
            cout<<"  ";
        }
        //number
        for(int j=i;j>=0;j--)
        {
            cout  << j+1<<" ";
        }
        cout<<endl;
        space-=2;



   }


}
